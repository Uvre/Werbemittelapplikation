@model WPMAsignmentHandling.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}

@section Ueberschrift{
    Werbemittelapplikation Direct Mail Service Winkhardt
}

<div class="appMainArea">
    <fieldset style="background-color:white; margin:0; padding-left:10PX; text-align:left">
        <legend>Neues Passwort vergeben</legend>
        @if (ViewBag.ResetSuccess != null)
        {
            <br />
            <span class="successMessage">Ihr Passwort wurde erfolgreich geändert.</span>
            <br />
            <br />
            <a href="/Home">Zum Login</a>
        }
        else
        {
            using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                //@Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.Code)
                
                <table>
                    <tr>
                        <th>
                            @Html.LabelFor(m => m.Email)
                        </th>
                        <td>
                            @Html.TextBoxFor(m => m.Email, new { @class = "large" })
                        </td>
                        <td>
                            @Html.ValidationMessageFor(m => m.Email)
                        </td>
                    </tr>
                    <tr>
                        <th>
                            @Html.LabelFor(m => m.Password)
                        </th>
                        <td>
                            @Html.PasswordFor(m => m.Password, new { @class = "large" })
                        </td>
                        <td>
                            @Html.ValidationMessageFor(m => m.Password)
                        </td>
                    </tr>
                    <tr>
                        <th>
                            @Html.LabelFor(m => m.ConfirmPassword)
                        </th>
                        <td>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "large" })
                        </td>
                        <td>
                            @Html.ValidationMessageFor(m => m.ConfirmPassword)
                        </td>
                    </tr>
                </table>
                <table>
                    <tr>
                        <td colspan="2" style="text-align:right; ">
                            <input type="submit" value="Bestätigen" />
                        </td>
                    </tr>
                </table>
            }
        }
    </fieldset>
</div>
